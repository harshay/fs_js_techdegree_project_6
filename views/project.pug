extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        //- 
        //-**
        h1= project_title

        //-
        //-**
        p.lead.text-light= project_description

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        //- 
        //-**
        ul
          each skill in technologies
            li= skill

        //- 
        //-**
        a.button.expanded(href='') Live Demo
        a.button.expanded(href=`${project_github_link}`) GitHub Repo
    
    //- 
    //-**
    each image in project_images
      img.image(src=`${image}`)