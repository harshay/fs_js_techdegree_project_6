extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        //- name
        h1= about_name

        //- title
        p.lead.text-light= about_title

        //- Elevator Pitch
        .portfolio-bio
          p= about_elevator_pitch

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Skills

        ul
          each skill in about_skills_array
            li= skill

        h6 Contact Info

        //- contact info
        ul
          li= about_contact_number
          li= about_email

        a.button.expanded(href=`${about_linkedin_link}`) LinkedIn
        a.button.expanded(href=`${about_github_link}`) GitHub
        a.button.expanded(href=`${about_twitter_link}`) Twitter
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Back
  